{% extends 'base.html.twig' %}

{% block title %}{% if edit %}
    {% trans %}participants.single.edit.text{% endtrans %}
{% else %}
    {% trans %}participants.assign.form.title{% endtrans %}
{% endif %}
{% endblock %}

{% block body %}
<div>
    {% if list.open or edit==true %}
        {% if edit %}
            <h3>{% trans %}participants.assign_to_list.text{% endtrans %}</h3>
            <p>{% trans %}participants.single.edit.text{% endtrans %}</p>
        {% else %}
                <h3>{% trans %}participants.assign.form.title{% endtrans %}</h3>
                <p>{% trans %}participants.assign.form.text{% endtrans %}</p>
        {% endif %}
    {{ form_start(form) }}
        <div class="form-group row">
            <div class="col-12 col-sm-3 col-form-label">
                {{form_label(form.name)}}
            </div>
            <div class="col-12 col-sm-9">
                {{ form_widget(form.name) }}
            </div>
        </div>
        {% if not edit %}
        <div class="form-group row">
            <div class="col-12 col-sm-3 col-form-label">
                {{form_label(form.password)}}
            </div>
            <div class="col-12 col-sm-9">
                {{ form_widget(form.password) }}
            </div>
        </div>
            {% endif %}
        <div class="form-group row">
            <div class="col-12 col-sm-3 col-form-label">
                {{form_label(form.phone)}}
            </div>
            <div class="col-12 col-sm-9">
                {{ form_widget(form.phone) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-sm-3 col-form-label">
                {{form_label(form.email)}}
            </div>
            <div class="col-12 col-sm-9">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-sm-3 col-form-label">
                {{form_label(form.votes)}}
            </div>
            <div class="col-12 col-sm-9">
                {{ form_widget(form.votes) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-sm-3 col-form-label">
                {{form_label(form.actions)}}
            </div>
            <div class="col-12 col-sm-9">
                {{ form_widget(form.actions) }}
            </div>
        </div>


    {{ form_widget(form.submit) }}
    {{ form_end(form) }}
        {% else %}
        <p class="alert alert-warning">{% trans %}participants.assign.closed{% endtrans %}</p>
    {% endif %}
</div>
{% endblock %}
