{% extends 'base.html.twig' %}

{% block title %}{% trans %}Walne zgromadzenie{% endtrans %}: {{ meeting.name }}{% endblock %}

{% block body %}

    <div>
        <h3>{{ meeting.name }}</h3>

        <p>
            {% if meeting.variant==1 %}
                {% trans %}Głosowanie nad uchwałą{% endtrans %}
            {% else %}
                {% trans %}Głosowanie personalne{% endtrans %}
            {% endif %}
        </p>
        <p>
            {% if meeting.variant==1 %}
                {% trans %}Ilość uchwał{% endtrans %}: {{ meeting.count }}
            {% else %}
                {% trans %}Ilość kandydatów{% endtrans %}: {{ meeting.count }}
            {% endif %}
        </p>
        <p>
            {% if meeting.weight==1 %}
                {% trans %}Waga głosów{% endtrans %}
            {% else %}
                {% trans %}Waga akcji{% endtrans %}
            {% endif %}
        </p>
        {% if meeting.secret %}
            <p>{% trans %}Głosowanie tajne{% endtrans %}</p>
        {% endif %}
        {% if meeting.participantList is null %}
            <p class="text-danger">{% trans %}Nie wybrałeś jeszcze listy uczestników!!!{% endtrans %}</p>
        {% endif %}

        {% if meeting.variant==2 %}
            <p>{% trans %}Maksymalnie do wyboru{% endtrans %}: {{ meeting.toChoose }}</p>
        {% endif %}
        <div class="btn-group btn-group-sm">
        {% if meeting.status==0 %}
            <a href="{{ path('app_manage_general_meeting_edit',{slug:meeting.slug}) }}" class="btn btn-secondary">{% trans %}Edytuj{% endtrans %}</a>
        {% endif %}
            {% if meeting.participantList is not null %}
            <a href="{{ path('app_manage_participant_list_show_participants',{id:meeting.participantList.id}) }}" class="btn btn-sm btn-primary">{% trans %}Lista uczestników{% endtrans %} ({{ meeting.participantList.participants|length }})</a>
            {% endif %}
            {{ include('polling/general_meeting_status.html.twig',{meeting:meeting}) }}
            {% if meeting.status==1 %}
                {% if active.active is defined and active.active is null %}
                    {{ include('polling/general_meeting_start_test_vote_form.html.twig',{meeting:meeting}) }}
                {% endif %}
            {% endif %}
            {% if meeting.variant==2 %}
                {% if meeting.status==1 %}
                <button class="btn btn-outline-success" data-toggle="modal" data-target="#titleModal">{% trans %}Ustaw tytuł głosowania{% endtrans %}</button>
                {% endif %}
                {% if active is not empty and active.active is null %}
                {% if active.turn is defined and meeting.status==1 %}
                    {% if active.last is not null and active.turn is not null %}
                        <button class="btn btn-outline-danger btn-activate-turn" data-confirm="{% trans with { '%turn%':(active.turn)} %}Na pewno chcesz powtórzyć %turn% turę?{% endtrans %}" data-href="{{ path('app_general_meeting_activate_vote',{slug:meeting.slug,number:(active.turn)}) }}">
                            {% trans with { '%turn%':(active.turn)} %}Powtórz %turn% turę{% endtrans %}
                        </button>
                    {% endif %}
                    {% if active.turn <1 %}
                    <button class="btn btn-outline-dark btn-activate-turn" data-confirm="{% trans with { '%turn%':(active.turn+1)} %}Na pewno chcesz rozpocząć %turn% turę?{% endtrans %}" data-href="{{ path('app_general_meeting_activate_vote',{slug:meeting.slug,number:(active.turn+1)}) }}">
                        {% trans with { '%turn%':(active.turn+1)} %}Rozpocznij %turn% turę{% endtrans %}
                    </button>
                        {% endif %}
                {% endif %}
                    {% endif %}
            {% endif %}
            {% if active.active is defined and active.active is not null %}
                <button class="btn btn-outline-primary" data-href="{{ path('app_ajax_general_meeting_end_vote',{slug:meeting.slug}) }}" id="gm-end-vote">{% trans %}Zakończ obecne głosowanie{% endtrans %}</button>
            {% endif %}
        </div>
        {% if meeting.status!=0 %}
        <div class="table-responsive">
            <table class="table table-striped">
            {% if meeting.variant==1 %}
                <thead>
                <tr>
                    <th></th>
                    <th>{% trans %}Treść uchwały{% endtrans %}</th>
                    <th>{% trans %}Status{% endtrans %}</th>
                    <th>{% trans %}Głosy za{% endtrans %}</th>
                    <th>{% trans %}Głosy przeciw{% endtrans %}</th>
                    {% if meeting.holdBack %}
                    <th>{% trans %}Głosy wstrzymane{% endtrans %}</th>
                    {% endif %}
                    {% if meeting.status==1 %}<th></th>{% endif %}
                </tr>
                </thead>
                <tbody>
            {% for key,resolution in meeting.resolutions %}
                <tr>
                    <td>{{ key+1 }}</td>
                    <td>{{ resolution.content }}</td>
                    <td>{% if resolution.accepted is not null %}
                            {% if resolution.accepted %}
                                {% trans %}Zaakceptowane{% endtrans %}
                                {% else %}
                                    {% trans %}Odrzucone{% endtrans %}
                                {% endif %}
                        {% endif %}
                    </td>
                    <td>
                        {% if resolution.votesOnCount is defined and resolution.votesOnCount is not empty %}
                        {% if(meeting.weight==1) %}
                        {{ (meeting.totalVotes > 0 ?((resolution.votesOnCount.votes/meeting.totalVotes)*100):0)|number_format(2,"."," ") }}
                        {% else %}
                            {{ (meeting.totalActions> 0?((resolution.votesOnCount.actions/meeting.totalActions)*100):0)|number_format(2,"."," ") }}
                            {% endif %}
                            %
                        {% endif %}
                    </td>
                    <td>
                        {% if resolution.votesAgainstCount is defined and resolution.votesAgainstCount is not empty %}
                        {% if(meeting.weight==1) %}
                            {{ (meeting.totalVotes > 0 ?((resolution.votesAgainstCount.votes/meeting.totalVotes)*100):0)|number_format(2,"."," ") }}
                        {% else %}
                            {{ (meeting.totalActions> 0?((resolution.votesAgainstCount.actions/meeting.totalActions)*100):0)|number_format(2,"."," ") }}
                        {% endif %}%
                        {% endif %}
                    </td>
                    {% if meeting.holdBack %}
                    <td>
                        {% if resolution.votesHoldCount is defined and resolution.votesHoldCount is not empty %}
                        {% if(meeting.weight==1) %}
                            {{ (meeting.totalVotes>0 ?((resolution.votesHoldCount.votes/meeting.totalVotes)*100):0)|number_format(2,"."," ") }}
                        {% else %}
                            {{ (meeting.totalActions>0 ?((resolution.votesHoldCount.actions/meeting.totalActions)*100):0)|number_format(2,"."," ") }}
                        {% endif %}%
                        {% endif %}
                    </td>
                    {% endif %}
                    {% if meeting.status==1 %}
                    <td>
                        {% if active.active is defined and active.active is null %}
                        {% if resolution.accepted is null %}
                            <button class="btn btn-primary btn-sm btn-gm-activate-vote" data-href="{{ path('app_general_meeting_activate_vote',{slug:meeting.slug,number:(key+1)}) }}">{% trans %}Aktywuj{% endtrans %}</button>
                        {% else %}
                            <button class="btn btn-primary btn-sm btn-gm-repeat-vote" data-href="{{ path('app_general_meeting_activate_vote',{slug:meeting.slug,number:(key+1)}) }}">{% trans %}Powtórz{% endtrans %}</button>
                        {% endif %}
                        {% endif %}
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
                </tbody>
            {% else %}
                <thead>
                <tr>
                    <th></th>
                    <th>{% trans %}Dane kandydata{% endtrans %}</th>
                    <th>{% trans %}Głosy{% endtrans %}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for c_key,candidate in meeting.candidates %}
                    <tr {% if candidate.secondTurn %}class="second-turn"{% endif %}>
                        <td>{{ c_key+1 }}</td>
                        <td>{{ candidate.name }}</td>
                        <td>
                            {% if meeting.weight==1 %}
                                {% for key,item in candidate.votesCount %}
                                    {% if item.percent is defined %}
                                        <p>{% trans %}Tura{% endtrans %} {{ key }}: {{ item.percent|number_format() }}%</p>
                                        <p class="small">{% trans %}Ważne głosy{% endtrans %}: {{ meeting.activeStatus.votes[key][c_key+1]|valid_votes(1) }}</p>
                                        <p class="small">{% trans %}Nie ważne głosy{% endtrans%}: {{ meeting.activeStatus.votes[key][c_key+1]|valid_votes(0) }}</p>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                {% for key,item in candidate.actionsCount %}
                                    {% if item.percent is defined %}
                                        <p>{% trans %}Tura{% endtrans %} {{ key }}: {{ item.percent }}%</p>
                                        <p class="small">{% trans %}Ważne głosy{% endtrans %}: {{ meeting.activeStatus.votes[key][c_key+1]|valid_votes(1) }}</p>
                                        <p class="small">{% trans %}Nie ważne głosy{% endtrans%}: {{ meeting.activeStatus.votes[key][c_key+1]|valid_votes(0) }}</p>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
            {% endif %}
            </table>
        </div>
            <div class="row">
                <div class="col-12 col-lg-6">
                    {% if active.active is defined and active.active is not null %}
                    {% if active.active == 0 %}
                        <h4>{% trans %}Trwa sprawdzanie obecności uczestników{% endtrans %}</h4>
                        {% else %}
                        <p>{% trans %}Aktualne głosowanie{% endtrans %}:</p>
                            {% if meeting.variant==1 %}
                                    <h4>{{ meeting.resolutions[active.active-1].content }}</h4>
                                {% else %}
                                    <h2>{% if active.title=='' %}{{ meeting.name }}{% else %}{{ active.title }}{% endif %} - {% trans with {'%turn%':active.turn} %}%turn% tura{% endtrans %}</h2>
                                {% endif %}
                    {% endif %}
                    {% endif %}
                </div>
                <div class="col-12 col-lg-6">
                    {% set act=0 %}
                    {% set vot=0 %}
                    {% set t_act=0 %}
                    {% set t_vot=0 %}
                    {% for participant in meeting.participantList.participants %}
                        {% set t_act=t_act+participant.actions %}
                        {% set t_vot=t_vot+participant.votes %}
                    {% endfor %}
                    {% if active.votes[0] is defined %}
                        {% for key,vote in active.votes[0] %}
                            {% for participant in meeting.participantList.participants %}
                                {% if key==participant.aid %}
                                    {% set act=act+participant.actions %}
                                    {% set vot=vot+participant.votes %}
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                    <div class="votes my-3">
                    {% if meeting.secret %}
                        <div class="vote-row">
                            <div class="vote-box"></div>
                            {% for item in meeting.participantList.participants %}
                                <div class="vote-box">
                                    {{ item.aid }}
                                </div>
                            {% endfor %}
                        </div>
                        {% for i in 0..0 %}
                            <div class="vote-row" id="vote_{{ i }}">
                                <div class="vote-box">{% if i==0 %}T{% else %}{{ i }}{% endif %}</div>
                                {% for item in meeting.participantList.participants %}
                                    <div class="vote-box {%if active.votes[i][item.aid] is defined %}{{active.votes[i][item.aid]|gm_vote_color}}{% endif %}" id="vote_{{ item.aid }}_{{ i }}">
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}

                        <div class="vote_progress">

                        {% for i in 1..meeting.count %}
                            {% if meeting.variant==1 %}
                            {% set a_o=0 %} {# akcje za #}
                            {% set a_a=0 %} {# akcje przeciw#}
                            {% set a_h=0 %} {# akcje wstrzymane#}
                            {% set v_o=0 %} {# głosy za #}
                            {% set v_a=0 %} {# głosy przeciw#}
                            {% set v_h=0 %} {# głosy wstrzymane#}

                                {% if active.votes[i] is defined and active.votes[i] is not empty %}
                                    {% for key,item in active.votes[i] %}
                                        {% for participant in meeting.participantList.participants %}
                                            {% if key==participant.aid %}
                                                {% if item==1 %}
                                                    {% set a_o=a_o+participant.actions %}
                                                    {% set v_o=v_o+participant.votes %}
                                                {% elseif item==0 %}
                                                    {% set a_a=a_a+participant.actions %}
                                                    {% set v_a=v_a+participant.votes %}
                                                {% else %}
                                                    {% set a_h=a_h+participant.actions %}
                                                    {% set v_h=v_h+participant.votes %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                {% else %}
                                    {% set v_o=0 %}
                                    {% set v_a=0 %}
                                    {% set v_h=0 %}
                                    {% set a_o=0 %}
                                    {% set a_a=0 %}
                                    {% set a_h=0 %}
                                {% endif %}
                                {% if meeting.totalVotes==0 and meeting.totalActions==0 %}
                                    {% set o_width=0 %}
                                    {% set a_width=0 %}
                                    {% set h_width=0 %}
                                {% else %}
                                    {% set o_width=(meeting.weight==1? ((v_o/meeting.totalVotes)*100)|number_format(2) : ((a_o/meeting.totalActions)*100)|number_format(2) ) %}
                                    {% set a_width=(meeting.weight==1? ((v_a/meeting.totalVotes)*100)|number_format(2) : ((a_a/meeting.totalActions)*100)|number_format(2) ) %}
                                    {% set h_width=(meeting.weight==1? ((v_h/meeting.totalVotes)*100)|number_format(2) : ((a_h/meeting.totalActions)*100)|number_format(2) ) %}
                                {% endif %}
                                <div class="vote-row" id="vote_{{ i }}">
                                    <div class="vote-box">{{ i }}</div>
                                    <div class="progress" id="progress_{{ i }}">
                                        <div class="progress-bar bg-success" data-votes="{{ v_o }}" data-actions="{{ a_o }}" id="progressOn_{{ i }}" title="{{ o_width }}%" role="progressbar" style="width: {{ o_width }}%" aria-valuenow="{{ o_width }}" aria-valuemin="0" aria-valuemax="100"></div>
                                        <div class="progress-bar bg-danger" data-votes="{{ v_a }}" data-actions="{{ a_a }}"  id="progressAgainst_{{ i }}" title="{{ a_width }}%" role="progressbar" style="width: {{ a_width }}%" aria-valuenow="{{ a_width }}" aria-valuemin="0" aria-valuemax="100"></div>
                                        <div class="progress-bar bg-warning" data-votes="{{ v_h }}" data-actions="{{ a_h }}"  id="progressHold_{{ i }}" title="{{ h_width }}%" role="progressbar" style="width: {{ h_width }}%" aria-valuenow="{{ h_width }}" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            {% else %}
                                {% set a_v=0 %} {# akcje ważne #}
                                {% set a_e=0 %} {# akcje błędne #}
                                {% set v_v=0 %} {# głosy ważne #}
                                {% set v_e=0 %} {# głosy błędne#}
                                {% if active.votes[active.turn][i] is defined and active.votes[active.turn][i] is not empty %}
                                    {% for key,item in active.votes[active.turn][i] %}
                                        {% for participant in meeting.participantList.participants %}
                                            {% if key==participant.aid %}
                                                {% if item==1 %}
                                                    {% set a_v=a_v+participant.actions %}
                                                    {% set v_v=v_v+participant.votes %}
                                                {% else %}
                                                    {% set a_e=a_e+participant.actions %}
                                                    {% set v_e=v_e+participant.votes %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                {% else %}
                                    {% set v_v=0 %}
                                    {% set v_e=0 %}
                                    {% set a_v=0 %}
                                    {% set a_e=0 %}
                                {% endif %}
                                {% if meeting.totalActions==0 and meeting.totalVotes==0 %}
                                    {% set v_width=0 %}
                                    {% set e_width=0 %}
                                {% else %}
                                    {% set v_width=(meeting.weight==1? ((v_v/meeting.totalVotes)*100)|number_format(2) : ((a_v/meeting.totalActions)*100)|number_format(2) ) %}
                                    {% set e_width=(meeting.weight==1? ((v_e/meeting.totalVotes)*100)|number_format(2) : ((a_e/meeting.totalActions)*100)|number_format(2) ) %}
                                {% endif %}
                                <div class="vote-row {% if meeting.variant==2 and active.turn==2 and i>0 and meeting.candidates[i-1].secondTurn == false %}d-none{% endif%}" id="vote_{{ i }}">
                                    <div class="vote-box">{{ i }}</div>
                                    <div class="progress" id="progress_{{ i }}">
                                        <div class="progress-bar bg-success" data-votes="{{ v_v }}" data-actions="{{ a_v }}" id="progressValid_{{ i }}" title="{{ v_width }}%" role="progressbar" style="width: {{ v_width }}%" aria-valuenow="{{ v_width }}" aria-valuemin="0" aria-valuemax="100"></div>
                                        <div class="progress-bar bg-danger" data-votes="{{ v_e }}" data-actions="{{ a_e }}"  id="progressError_{{ i }}" title="{{ e_width }}%" role="progressbar" style="width: {{ e_width }}%" aria-valuenow="{{ e_width }}" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                        </div>
                        {% else %}
                            <div class="vote-row">
                                <div class="vote-box"></div>
                                {% for item in meeting.participantList.participants %}
                                    <div class="vote-box">
                                        {{ item.aid }}
                                    </div>
                                {% endfor %}
                            </div>
                            {% for i in 0..meeting.count %}
                                <div class="vote-row {% if meeting.variant==2 and active.turn==2 and i>0 and meeting.candidates[i-1].secondTurn == false %}d-none{% endif%}" id="vote_{{ i }}">
                                    <div class="vote-box">{% if i==0 %}T{% else %}{{ i }}{% endif %}</div>
                                    {% if meeting.variant==1 %}
                                    {% for item in meeting.participantList.participants %}
                                        <div class="vote-box {%if active.votes[i][item.aid] is defined %}{{active.votes[i][item.aid]|gm_vote_color}}{% endif %}" id="vote_{{ item.aid }}_{{ i }}">
                                        </div>
                                    {% endfor %}
                                    {% else %}
                                        {% for item in meeting.participantList.participants %}
                                            {% if i==0 %}
                                                <div class="vote-box {%if active.votes[i][item.aid] is defined %}{{active.votes[i][item.aid]|gm_vote_color}}{% endif %}" id="vote_{{ item.aid }}_{{ i }}">
                                                </div>
                                            {% else %}
                                            <div class="vote-box {%if active.votes[active.turn][i][item.aid] is defined %}{{active.votes[active.turn][i][item.aid]|gm_vote_color}}{% endif %}" id="vote_{{ item.aid }}_{{ i }}">
                                            </div>
                                                {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            {% endfor %}
                    {% endif %}
                    </div>
                    <div class="presence">
                        {% if active.votes is defined and active.votes[active.active] is defined%}
                            <p>{% trans %}Zagłosowało{% endtrans %}:
                                <span class="counter">{% if meeting.variant==1 %}{{ active.votes[active.active]|length }}{% else %}{{active.voted|length}}{% endif %}</span>/<span class="sum">{{ (meeting.participantList.participants|length) }}</span></p>
                        {% endif %}
                        <p>{% trans %}Na sali znajduje się{% endtrans %}:</p>
                        <p>
                            {% if active.active is not null and active.active >0 %}

                            {% endif %}

                            <input type="hidden" id="votes_count" value="{{ vot }}">
                            <input type="hidden" id="actions_count" value="{{ act }}">
                            <input type="hidden" id="actions_total" value="{% if meeting.totalActions is null or meeting.totalActions==0 %}{{ t_act }}{% else %}{{ meeting.totalActions }}{% endif %}">
                            <input type="hidden" id="votes_total" value="{% if meeting.totalVotes is null or meeting.totalVotes==0 %}{{ t_vot }}{% else %}{{ meeting.totalVotes }}{% endif %}">
                        {% if meeting.weight==1 %}
                            <span id="vot_span">{{ vot }}</span> {% trans %}głosów - co stanowi{% endtrans %} <span id="vot_span_total">{{ ((vot/t_vot)*100)|number_format(2) }}</span>%
                        {% else %}
                            <span id="act_span">{{ act }}</span> {% trans %}akcji - co stanowi{% endtrans %} <span id="act_span_total">{{ ((act/t_act)*100)|number_format(2) }}</span>%
                        {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% if meeting.variant==2 %}
    <div class="modal" id="titleModal" tabindex="-1" role="dialog" aria-labelledby="titleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="titleForm" data-href="{{ path('app_meeting_save_title',{id:meeting.id}) }}">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleModalLabel">{% trans %}Ustaw tytuł głosowania{% endtrans %}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                        <div class="form-group">
                            <label for="title_title">{% trans %}Tytuł{% endtrans %}</label>
                            <input type="text" id="title_title" class="form-control" required value="{% if meeting.activeStatus.title is defined %}{{ meeting.activeStatus.title }}{% endif %}" placeholder="{% trans %}Wprowadź tytuł głosowania{% endtrans %}">
                        </div>
                </div>
                <div class="modal-footer">
                    <div class="row w-100">
                        <div class="col-6">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Zamknij{% endtrans %}</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn btn-primary">{% trans %}Zapisz{% endtrans %}</button>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ include('polling/vote_scripts.html.twig',{meeting:meeting}) }}
{% endblock %}