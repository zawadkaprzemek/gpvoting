{% extends 'base.html.twig' %}

{% block title %}{% trans %}Głosowanie{% endtrans %}: {{ polling.name }}{% endblock %}

{% block body %}
    <div class="">
        <h4>{% trans %}Głosowanie{% endtrans %}: {{ polling.name }}</h4>
    </div>

    <div class="text-info">
        {% if polling.session %}
            <p>{% trans %}Planowana data głosowania{% endtrans %}: {{ polling.startDate|date('d-m-Y H:i') }}</p>
        {% else %}
            <p>{% trans %}Głosowanie dostępne od{% endtrans %}: {{ polling.startDate|date('d-m-Y H:i') }} {% trans %}do{% endtrans %} {{ polling.endDate|date('d-m-Y H:i') }}</p>
            <p>{% trans %}Kod dostępu{% endtrans %}: {{ polling.code.name }}</p>
        {% endif %}
        <p></p>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="btn-group btn-group-sm">
                <a href="{{ path('app_polling_edit',{slug:polling.slug}) }}" class="btn btn-secondary">{% trans %}Edycja{% endtrans %}</a>
                {% if polling.questions|length>0 %}
                    <a href="{{ path('app_polling_vote_test',{slug:polling.slug}) }}" class="btn btn-success">{% trans %}Testowe głosowanie{% endtrans %}</a>
                    <a href="{{ path('app_polling_results',{slug:polling.slug}) }}" class="btn btn-info">{% trans %}Wyniki{% endtrans %}</a>
                {% endif %}
            </div>
        </div>
            {% if polling.session %}
        <div class="col-12 mt-2">
            <p class="mb-0">{% trans %}session.manage{% endtrans %}</p>
            {% if polling.settings is not null %}
            <p> {% trans %}session.status{% endtrans %}:
                {% if polling.settings.status==0 %}
                    {% trans %}session.waiting{% endtrans %}
                {% elseif polling.settings.status==1 %}
                    {% trans %}session.running{% endtrans %}
                {% else %}
                    {% trans %}session.ended{% endtrans %}
                {% endif %}
            </p>
            {% if polling.settings.answerEnd > now %}
                <p>{% trans %}session.active_question{% endtrans %}: {{ polling.questions[polling.settings.activeQuestion-1].questionContent }}</p>
                <p>{% trans %}session.time_to_end_vote{% endtrans %}: <span id="voteEndCounter"></span></p>
            {% endif %}
            {% endif %}
            <div class="btn-group btn-group-sm">
                <a href="{{ path('app_manage_session_users',{slug:polling.slug}) }}" class="btn btn-outline-success">{% trans %}Lista użytkowników{% endtrans %}</a>
                {% if polling.settings is null or polling.settings.status==0 %}
                    <a href="{{ path('app_manage_begin_session',{slug:polling.slug}) }}" class="btn btn-success">{% trans %}Rozpocznij sesję{% endtrans %}</a>
                {% endif %}
                {% if polling.settings is not null and polling.settings.status==1 %}
                    {{ include('manage/_end_session.html.twig',{polling:polling}) }}
                    <a {% if polling.settings is not null and polling.settings.answerEnd > date()%}
                        href="javascript:void(0)"
                       {% else %}href="{{ path('app_manage_session_settings',{slug:polling.slug}) }}"
                    {% endif %} class="btn btn-secondary">
                        {{ 'session.settings'|info_icon }}
                        {{ 'session.settings'|help_icon }}
                        {% trans %}session.settings.text{% endtrans %}</a>
                {% endif %}


            {% endif %}
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <p>{% trans %}Pytania{% endtrans%} ({{ polling.questions|length }}/{{ polling.questionsCount }})</p>
            {% if (polling.questions|length)<polling.questionsCount %}
                <a href="{{ path('app_questions_add',{slug:polling.slug}) }}" class="btn btn-sm btn-primary mb-2">{% trans %}Dodaj nowe pytanie{% endtrans %}</a>
            {% endif %}
        </div>
        {% for question in polling.questions %}
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-3 col-md-4">
                        <span class="mr-2">{{ question.questionContent }}</span>
                    </div>
                    <div class="col-9 col-md-8">
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('app_question_show',{slug:question.polling.slug,sort:question.sort}) }}" class="btn btn-primary">{% trans %}Podgląd{% endtrans %}</a>
                            <a href="{{ path('app_question_edit',{slug:question.polling.slug,sort:question.sort}) }}" class="btn btn-secondary">{% trans %}Edycja{% endtrans %}</a>
                            <a href="{{ path('app_question_results',{sort:question.sort,slug:question.polling.slug}) }}" class="btn btn-info">{% trans %}Wyniki{% endtrans %}</a>
                            {{include('question/_delete_form.html.twig',{ question:question }) }}
                        </div>
                    </div>

                </div>

            </div>
        {% else %}
            <div class="col-12"><p class="text-info">{% trans %}Brak pytań{% endtrans %}</p></div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% if polling.settings is not null and polling.settings.answerEnd is not null %}
        <script>
            // Set the date we're counting down to
            let t = new Date();
            {% set seconds = polling.settings.answerEnd|date('U')- now|date('U') %}
            {% if seconds > 0%}
            t.setSeconds(t.getSeconds() + {{ seconds }});
            t = t.getTime();
            // Update the count down every 1 second
            let x = setInterval(function() {

                // Get today's date and time
                let now = new Date().getTime();

                // Find the distance between now and the count down date
                let distance = t - now;

                // Time calculations for days, hours, minutes and seconds
                let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                let seconds = Math.floor((distance % (1000 * 60)) / 1000);

                let html='';
                if(minutes>0)
                {
                    html+=minutes;
                    if(minutes===1)
                    {
                        html+=' {% trans %}minute{% endtrans %}';
                    }else{
                        html+=' {% trans %}minutes{% endtrans %}';
                    }
                }
                html+=' '+seconds+ ' {% trans %}seconds{% endtrans %}';
                document.getElementById("voteEndCounter").innerHTML = html;

                // If the count down is finished, write some text
                if (distance < 1) {
                    clearInterval(x);
                    location.reload();
                }
            }, 1000);
            {% endif %}
        </script>
    {% endif %}
{% endblock %}