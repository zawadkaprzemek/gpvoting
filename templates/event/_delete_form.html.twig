<form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('{% trans %}Na pewno chcesz usunąć ten event?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="btn btn-sm btn-dark rounded-left-0">{% trans %}Usuń{% endtrans %}</button>
</form>
