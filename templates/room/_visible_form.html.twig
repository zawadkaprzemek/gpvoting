<form method="post" action="{{ path('app_room_visible', {'slug': room.slug}) }}"
      {% if room.visible %}
      onsubmit="return confirm('{% trans %}room.hide.confirm{% endtrans %}');"
      {% else %}
          onsubmit="return confirm('{% trans %}room.unhide.confirm{% endtrans %}');"
      {% endif %}
>
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="_token" value="{{ csrf_token('patch' ~ room.id) }}">
    <button class="btn btn-sm btn-outline-success rounded-0">
        {% if room.visible %}
            {{ 'room.hide'|info_icon }}
            {{ 'room.hide'|help_icon }}
            {% trans %}hide{% endtrans %}
        {% else %}
            {{ 'room.unhide'|info_icon }}
            {{ 'room.unhide'|help_icon }}
            {% trans %}unhide{% endtrans %}
        {% endif %}
    </button>
</form>
