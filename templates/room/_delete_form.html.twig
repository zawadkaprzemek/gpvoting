<form method="post" action="{{ path('app_room_delete', {'id': room.id}) }}" onsubmit="return confirm('{% trans %}Na pewno chcesz usunąć ten pokój?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
    <button class="btn btn-sm btn-dark rounded-left-0">{% trans %}Usuń{% endtrans %}</button>
</form>
