{% extends 'base.html.twig' %}

{% block title %}admin.packs.list{% endblock %}

{% block body %}

    <h3>{% trans %}admin.packs.list{% endtrans %}</h3>

    <a href="{{ path('admin_packs_new') }}" class="btn btn-primary">{% trans %}admin.packs.new.title{% endtrans %}</a>
    <div class="table-responsive">
        <table id="usersTable" class="table table-striped">
            <thead>
            <tr>
                <th>{% trans %}identifier{% endtrans %}</th>
                <th>{% trans %}name{% endtrans %}</th>
                <th>{% trans %}event_limit{% endtrans %}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for pack in pagination %}
                <tr>
                    <td>{{ pack.id }}</td>
                    <td>{{ pack.name}}</td>
                    <td>{{ pack.eventsCount }}</td>

                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('admin_packs_edit',{id:pack.id}) }}" class="btn btn-sm btn-outline-secondary mb-2">{% trans %}edit{% endtrans %}</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
